# AWS Credentials (for local development)
export AWS_ACCESS_KEY_ID="your-access-key-id"
export AWS_SECRET_ACCESS_KEY="your-secret-access-key"
export AWS_DEFAULT_REGION="ap-southeast-1"

# Terraform Variables (TF_VAR_* prefix)
# Terraform automatically reads these environment variables (case-insensitive matching)
# These values are used by all layers and stored in Secrets Manager for CI/CD

export TF_VAR_AWS_REGION="ap-southeast-1"
export TF_VAR_ENVIRONMENT="dev"
export TF_VAR_GITHUB_OIDC_CONFIG="{\"organization\":\"your-github-org\",\"repository\":\"terraform-training\",\"create_oidc\":false,\"create_policies\":false,\"create_plan_role\":false,\"create_apply_role\":false}"
export TF_VAR_PROJECT_NAME="tt-practice"
