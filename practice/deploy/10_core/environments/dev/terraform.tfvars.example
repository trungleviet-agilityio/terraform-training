# Core Configuration
# These are the only required variables for 10_core layer
aws_region   = "ap-southeast-1"
project_name = "tt-practice"
environment  = "dev"

# Optional: DNS Configuration (Route53)
# Leave domain_name empty to skip DNS setup
# dns_config = {
