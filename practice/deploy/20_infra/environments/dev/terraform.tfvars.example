aws_region   = "ap-southeast-1"
project_name = "tt-practice"
environment  = "dev"

# API Gateway Configuration
# Note: Set these after Lambda function is created in 30_app layer
# For now, leave empty to create API Gateway without Lambda integration
# api_lambda_function_arn  = ""
# api_lambda_function_name = ""
create_api_gateway = false  # Set to true after Lambda is created

# SQS Configuration
sqs_queue_name = "main"      # Queue name (without prefix)
sqs_enable_dlq = true         # Enable Dead Letter Queue
create_sqs     = true         # Create SQS queues

# EventBridge Schedule Configuration
# Note: Set these after Lambda function is created in 30_app layer
# eventbridge_schedule_name       = "producer"
# eventbridge_schedule_expression = "cron(0 12 * * ? *)"  # Daily at 12:00 PM UTC
# eventbridge_lambda_function_arn = ""
# eventbridge_lambda_function_name = ""
create_eventbridge_schedule = false  # Set to true after Lambda is created

# Additional tags
tags = {
  CostCenter = "training"
  Owner      = "your-alias"
}

# GitHub OIDC Configuration (grouped)
# Configure these to enable GitHub Actions authentication via OIDC
github_oidc_config = {
  organization      = "your-github-org"
  repository        = "terraform-training"
  create_oidc       = false
  create_policies   = false
  create_plan_role  = false
  create_apply_role = false
  # allowed_branches  = ["main", "develop"]  # Optional: Restrict to specific branches
}

# Backend Configuration (grouped - from 10_core layer outputs)
# These values should be obtained from 10_core layer outputs after deploying 10_core
# Run: terraform output -json in 10_core/environments/dev/ to get these values
backend_config = {
  bucket_arn = ""  # Replace with output from: terraform output state_backend_bucket_arn
  table_arn  = ""  # Replace with output from: terraform output state_backend_dynamodb_table_arn
  account_id = ""  # Replace with output from: terraform output account_id
}
